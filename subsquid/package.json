{
  "name": "amica-base-indexer",
  "version": "1.0.0",
  "description": "Subsquid indexer for Amica protocol on Base network",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "clean": "rm -rf lib .squid",
    "db:migrate": "npx squid-typeorm-migration apply",
    "db:migrate:create": "npx squid-typeorm-migration generate",
    "db:reset": "docker compose down && docker compose up -d db && sleep 5 && npm run db:migrate",
    "codegen": "npx squid-typeorm-codegen",
    "typegen": "npx squid-evm-typegen src/abi src/abi/PersonaTokenFactory.json src/abi/AmicaToken.json src/abi/AmicaBridgeWrapper.json --multicall",
    "processor:start": "node -r dotenv/config lib/main.js",
    "serve": "npx squid-graphql-server",
    "serve:prod": "npx squid-graphql-server --production",
    "check-updates": "npx npm-check-updates --filter /subsquid/",
    "bump": "npx npm-check-updates --filter /subsquid/ -u && npm i -f",
    "test:local": "./test-local.sh test",
    "test:validate": "node scripts/validate-indexing.js",
    "test:events": "node scripts/test-event-queries.js",
    "test:coverage": "node scripts/event-coverage-check.js"
  },
  "dependencies": {
    "@subsquid/archive-registry": "^3.3.2",
    "@subsquid/evm-abi": "^0.3.1",
    "@subsquid/evm-codec": "^0.3.0",
    "@subsquid/evm-processor": "^1.16.2",
    "@subsquid/graphql-server": "^4.6.0",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "dotenv": "^16.4.5",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@subsquid/evm-typegen": "^4.4.0",
    "@subsquid/typeorm-codegen": "^2.0.2",
    "@types/node": "^20.14.10",
    "typescript": "^5.5.3"
  }
}
